<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F2F2F2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".CycleActivity_backup"
            android:orientation="vertical"
            android:background="@color/white">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="50dp"
                android:color="@color/black"
                android:fontFamily="@font/roboto_black"
                android:text="Cycling"
                android:textColor="#00D1FF"
                android:textSize="40sp"/>

            <FrameLayout
                android:layout_width="350dp"
                android:layout_height="800dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/your_rounded_shape"
                android:elevation="10dp">
                <GridLayout
                    android:layout_width="300dp"
                    android:layout_height="70dp"
                    android:background="@drawable/your_rounded_shape"
                    android:elevation="5dp"
                    android:layout_marginTop="30dp"
                    android:layout_gravity="center">

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:text="풍향"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:gravity="center"/>

                    <LinearLayout
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_marginTop="5dp"
                            android:layout_width="70dp"
                            android:layout_height="40dp"
                            android:src="@drawable/arrow_s"/>
                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="20dp"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:text="9시"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_marginTop="5dp"
                            android:layout_width="70dp"
                            android:layout_height="40dp"
                            android:src="@drawable/arrow_ne"/>
                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="20dp"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:text="15시"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_marginTop="5dp"
                            android:layout_width="70dp"
                            android:layout_height="40dp"
                            android:src="@drawable/arrow_e"/>
                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="20dp"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:text="19시"/>

                    </LinearLayout>



                </GridLayout>



                <TextView
                    android:id="@+id/is_good"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="280dp"
                    android:layout_gravity="center"
                    android:text="라이딩하기 좋은 날씨"
                    android:textColor="#0085ff"
                    android:visibility="visible"
                    android:textStyle="bold"
                    android:textSize="20sp"/>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="280dp"
                    android:layout_gravity="center"
                    android:text="서핑하기 힘든 날씨"
                    android:textColor="#ff7800"
                    android:visibility="invisible"
                    android:textStyle="bold"
                    android:textSize="20sp"/>


                <TextView
                    android:id="@+id/msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="240dp"
                    android:text="서핑하기 힘든 날씨"
                    android:textColor="#ff7800"
                    android:textSize="17sp"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/img"
                    android:layout_gravity="center"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginBottom="120dp"
                    android:src="@drawable/cycle_b"
                    android:visibility="visible"/>


                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginBottom="120dp"
                    android:src="@drawable/cycle_o"
                    android:visibility="invisible"/>


                <GridLayout
                    android:layout_width="300dp"
                    android:layout_height="230dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="195dp"
                    android:columnCount="2"
                    android:rowCount="4"
                    android:orientation="horizontal"
                    android:elevation="10dp"
                    android:background="@drawable/your_rounded_shape">

                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:text="온도"
                        android:textStyle="bold"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/temperature"
                        android:layout_marginTop="10dp"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:text="20"
                        android:textSize="20sp"/>

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:text="강수량"
                        android:textStyle="bold"
                        android:textSize="20sp"/>

                    <TextView
                        android:id="@+id/rainfall"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:text="10mm"
                        android:textSize="20sp"/>

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="43dp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:text="풍속"
                        android:textStyle="bold"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/wind"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:text="dd"
                        android:textSize="20sp"/>

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:text="미세먼지등급"
                        android:textStyle="bold"
                        android:textSize="20sp"/>

                    <TextView
                        android:id="@+id/dust"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:text="심각"
                        android:textSize="20sp"/>


                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:text="오존등급"
                        android:textStyle="bold"
                        android:textSize="20sp"/>



                    <TextView
                        android:id="@+id/ozone"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:text="심각"
                        android:textSize="20sp"/>

                </GridLayout>

                <Button
                    android:id="@+id/address"
                    android:background="@drawable/rounded_shape_purple"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="350dp"
                    android:text="위치:경기도 남양주시"
                    android:textColor="@color/white"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:elevation="10dp"/>

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="50dp"
                android:textColor="#00D1FF"
                />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>